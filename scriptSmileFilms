CREATE TABLE Barcodes (
  id INTEGER AUTO_INCREMENT NOT NULL,
  nombre VARCHAR(30) NOT NULL,
  descripcion VARCHAR(255) NOT NULL,
  barcode VARCHAR(50) NOT NULL,
  PRIMARY KEY (id)
);

