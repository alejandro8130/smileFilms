"Select Clientes.nombre,Clientes.apellido, Peliculas.nombre, "
                   + "Prestamos.fecha_devolucion, Prestamos.pago, Empleados.nombre,Empleados.apellido from Prestamos "
                   + "inner join Clientes on Prestamos.Cliente_id=Clientes.id "
                   + "inner join Peliculas on Prestamos.Pelicula_id=Peliculas.id "
                   + "inner join Empleados on Prestamos.Empleado_id=Empleados.id;";


SELECT Peliculas.nombre,Peliculas.poster,Generos.nombre,Peliculas.duracion,Peliculas.estado,Peliculas.ejemplar,Peliculas.descripcion FROM Peliculas INNER JOIN Generos ON Peliculas.genero_id=Generos.id;



CREATE TABLE 'bonds' (
  id int(11) NOT NULL AUTO_INCREMENT,
  name varchar(255) DEFAULT NULL,
 PRIMARY KEY('id')
 );
INSERT INTO bonds(name) SELECT DISTINCT bond FROM customer WHERE bond IS NOT NULL;






